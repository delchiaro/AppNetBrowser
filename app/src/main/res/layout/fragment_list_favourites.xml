<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_favouriteList_layout"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/tv_favourite_list"
        android:id="@+id/tvAppList"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/btnConnect"
        android:layout_toEndOf="@+id/btnConnect"

        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#e0e0e0"
        android:layout_below="@+id/tvAppList"
        android:layout_marginTop="10dp">

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/app_favourite_list_view"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"

            android:background="#eeeeee"

            android:layout_weight="1"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            />
    </LinearLayout>
</LinearLayout>