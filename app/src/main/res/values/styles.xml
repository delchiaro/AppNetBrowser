    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!--<item name="android:background">@color/white_opaque</item>-->
        <item name="android:windowBackground">@color/activity_background_color</item>
        <!--<item name="android:colorBackground">@color/white_opaque</item>-->


        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--   darker variant for the geoStatus bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/colorAccent</item>


    </style>

    <style name="ListTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">@color/colorNearbyPrimary</item>
        <!--   darker variant for the geoStatus bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/colorNearbyPrimaryDark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/colorNearbyAccent</item>
    </style>


    <style name="MapTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">@color/colorMapPrimary</item>
        <!--   darker variant for the geoStatus bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/colorMapPrimaryDark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/colorMapAccent</item>
    </style>


    <style name="WebApp" parent="Theme.AppCompat.Light.NoActionBar">
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">@color/colorWebAppPrimary</item>
        <!--   darker variant for the geoStatus bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/colorWebAppPrimaryDark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/colorWebAppAccent</item>
    </style>


    <style name="MyCustomTabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTabText</item>
        <item name="tabSelectedTextColor">@color/tab_text_selected</item>
        <item name="tabIndicatorColor">@color/tab_text</item>

    </style>

    <style name="MyCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/tab_text_selected</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


